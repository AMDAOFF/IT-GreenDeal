@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
		<form id="profile-form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Input.UserDTO.Id"/>
			<div class="form-group">
				<label asp-for="Input.UserDTO.Name">Fornavn</label>
				<input asp-for="Input.UserDTO.Name" class="form-control"/>
			</div>
			<div class="form-group">
				<label asp-for="Input.UserDTO.Surname">Efternavn</label>
				<input asp-for="Input.UserDTO.Surname" class="form-control"/>
			</div>
			<div class="form-group">
				<label>Allergier</label>
				@if (Model.Input.Allergies.Count() > 0)
				{
					@for (int i = 0; i < Model.Input.Allergies.Count(); i++)
					{
						<div class="form-check col-5 ml-3">
							<label class="form-check-label">
								<input type="hidden" asp-for="@Model.Input.Allergies[i].Value" />
								<input type="hidden" asp-for="@Model.Input.Allergies[i].Text" />
								<input type="checkbox" class="form-check-input" asp-for="@Model.Input.Allergies[i].Selected">@Model.Input.Allergies[i].Text
							</label>
						</div>
					}
				}
				else
				{
					<label>Enten er der ikke blevet oprettet allergier, eller er de utilgængelig</label>
				}
			</div>
			<button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
		</form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}