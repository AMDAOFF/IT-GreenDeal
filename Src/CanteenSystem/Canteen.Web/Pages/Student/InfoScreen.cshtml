@using QRCoder 
@using System.Drawing
@using System.IO

@{ 
    byte[] ConvertBitmapToBytes(Bitmap bitmap)
    {
        using (MemoryStream memoryStream = new MemoryStream())
        {
            bitmap.Save(memoryStream, System.Drawing.Imaging.ImageFormat.Png);
            return memoryStream.ToArray();
        }
    }
}

